@model IEnumerable<DockerTest.Data.Entities.Note>

@{
    Layout = "_Layout";
    ViewBag.Title = "Advert";
}

@using (Html.BeginForm("Add", "Note", FormMethod.Post, new {@class = "mt-5"}))
{
    <div class="form-group row">
        <input class="form-control col-md-5" type="text" maxlength="50" name="Description" placeholder="Введите текст...">
        <input class="btn btn-primary ml-2" type="submit" value="Добавить">
    </div>
}

<div class="text-center">
    @foreach (var advert in Model)
    {
        <div class="form-group row">
            <div class="input-group-text">@advert.Description</div>
            <div class="btn btn-outline-danger ml-2" onclick="onDelete(@advert.Id)">Удалить</div>
        </div>
    }
</div>

@section Scripts
{
    <script>
        function onDelete(id) {
            $.ajax({
                url: `/note/delete?id=${id}`,
                type: 'DELETE',
                success: function() {
                    location.reload();
                }
            });
        }
    </script>
}
